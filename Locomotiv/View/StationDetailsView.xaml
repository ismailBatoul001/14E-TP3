<UserControl x:Class="Locomotiv.View.StationDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Détails de la station" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <Border BorderBrush="Gray" 
                    BorderThickness="1" 
                    Padding="15" 
                    Margin="0,0,0,20"
                    Background="#F5F5F5">
                <StackPanel>
                    <TextBlock Text="{Binding StationNom}" 
                               FontSize="20" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StationPosition}" 
                               Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding StationCapacite}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Voies/Quais" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,10,0,10"/>
            <DataGrid ItemsSource="{Binding Voies}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Height="150"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Numéro" Binding="{Binding Numero}" Width="*"/>
                    <DataGridTextColumn Header="Disponible" Binding="{Binding EstDisponible}" Width="*"/>
                    <DataGridTextColumn Header="Train actuel" Binding="{Binding TrainActuel.Numero}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Signaux" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,10,0,10"/>
            <DataGrid ItemsSource="{Binding Signaux}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Height="150"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                    <DataGridTextColumn Header="État" Binding="{Binding Etat}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Trains en gare" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,10,0,10"/>
            <DataGrid ItemsSource="{Binding TrainsEnGare}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Numéro" Binding="{Binding Numero}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="État" Binding="{Binding Etat}" Width="*"/>
                    <DataGridTextColumn Header="Capacité" Binding="{Binding Capacite}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>